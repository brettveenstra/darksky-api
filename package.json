{
  "name": "darksky-api",
  "version": "0.0.0",
  "description": "",
  "keywords": [
    "darksky",
    "api",
    "typescript",
    "weather",
    "darksky.net",
    "forecast",
    "forecast.io"
  ],
  "main": "dist/darksky-api.cjs.js",
  "module": "dist/darksky-api.es5.js",
  "browser": "dist/darksky-api.umd.min.js",
  "typings": "dist/types/darksky-api.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "author": "Jordon de Hoog <jordon.dehoog@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/worldturtlemedia/darksky-api"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.test.json -t codeFrame --fix",
    "lint:src": "npm run lint -- --project tsconfig.json 'src/**/*.ts'",
    "lint:test": "npm run lint -- --project tsconfig.test.json 'test/**/*.ts'",
    "lint:all": "npm run lint:src && npm run lint:test",
    "predocs": "rimraf docs",
    "docs": "typedoc --out docs --excludeExternals --target es6 --includeDeclarations --excludePrivate --mode modules src",
    "tsc": "tsc --module commonjs",
    "rollup": "rollup -c rollup.config.ts",
    "prebuild": "rimraf dist",
    "build": "npm run tsc && npm run rollup",
    "postbuild": "npm run docs",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "colors": "^1.3.3",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-config": "^24.8.0",
    "lint-staged": "^8.1.7",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.17.1",
    "prompt": "^1.0.0",
    "replace-in-file": "^4.1.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.12.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.1",
    "rollup-plugin-uglify": "^6.0.2",
    "semantic-release": "^15.13.12",
    "shelljs": "^0.8.3",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,json,js,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "npm run lint -- --project tsconfig.json",
      "git add"
    ],
    "test/**/*.ts": [
      "npm run lint -- --project tsconfig.test.json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
